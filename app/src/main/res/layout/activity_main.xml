<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawarLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.petsonline.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical"
            android:paddingBottom="?actionBarSize"
            android:visibility="visible">

            <!--        <LinearLayout-->
            <!--            android:id="@+id/search"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_margin="10dp"-->
            <!--            android:background="@drawable/backgroundlayout"-->
            <!--            android:orientation="horizontal"-->
            <!--            android:visibility="visible">-->

            <!--            <ImageView-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:layout_margin="10dp"-->
            <!--                android:src="@drawable/ic_search_black_24dp" />-->

            <!--            <TextView-->
            <!--                android:id="@+id/txts"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="40dp"-->
            <!--                android:layout_marginLeft="10dp"-->
            <!--                android:layout_marginRight="10dp"-->
            <!--                android:gravity="bottom"-->
            <!--                android:text="Search here"-->
            <!--                android:textSize="20dp" />-->
            <!--        </LinearLayout>-->

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="90dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardA"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:background="@color/white"
                                    android:src="@drawable/cats"
                                    app:civ_border_color="#FFF"
                                    app:civ_border_width="2dp" />

                                <TextView
                                    android:id="@+id/txtPetA"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:text="Cats"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardB"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:background="@color/white"
                                    android:src="@drawable/pet3"
                                    app:civ_border_color="#FFF"
                                    app:civ_border_width="2dp" />

                                <TextView
                                    android:id="@+id/txtPetB"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:text="Dogs"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/animalCard"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:background="@color/white"
                                    android:src="@drawable/hen"
                                    app:civ_border_color="#FFF"
                                    app:civ_border_width="2dp" />

                                <TextView
                                    android:id="@+id/txtPetC"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:text="Hens"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardD"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:background="@color/white"
                                    android:src="@drawable/rabit"
                                    app:civ_border_color="#FFF"
                                    app:civ_border_width="2dp" />

                                <TextView
                                    android:id="@+id/txtPetD"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:text="Rabbits"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttons1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/efCard"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:background="@color/white"
                                    android:src="@drawable/goat"
                                    app:civ_border_color="#FFF"
                                    app:civ_border_width="2dp" />

                                <TextView
                                    android:id="@+id/txtPetE"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:text="Goat"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardF"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/txtPetF"
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:background="@color/white"
                                    android:src="@drawable/parrots"
                                    app:civ_border_color="#FFF"
                                    app:civ_border_width="2dp" />

                                <TextView
                                    android:id="@+id/txtOpeE"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:text="Parrots"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:fabAlignmentMode="center"
                app:menu="@menu/drawar_menu" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:itemTextColor="#6c6c6c"
        app:menu="@menu/drawar_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
