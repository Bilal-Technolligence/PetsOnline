<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.petsonline">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetsOnline">
        <activity
            android:name=".activities.CreateNewAdActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SpecificAdsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.AddDetail"
            android:exported="false" />
        <activity
            android:name=".activities.CatsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SplashScreen"
            android:exported="true"
            android:theme="@style/AppMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppMaterialTheme" />
        <activity
            android:name=".activities.RegisterActivity"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppMaterialTheme" />
        <activity android:name=".activities.CompleteProfile" />
        <activity android:name=".activities.ChatList" />
        <activity
            android:name=".activities.Chat"
            android:theme="@style/AppMaterialTheme" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>